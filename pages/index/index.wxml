<!--miniprogram/pages/zealotime/zealotime.wxml-->
<view class="container">
  <text class="usermotto">人人为我 我为人人 众志成城 数据战疫</text>
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 请点此登录并开启自动定位记录 </button>
    <block  wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      <text >我的本地记录：{{myLocalCount}} 条\n当前时间窗口：{{myTimeSlotUTC}}\n当前定位精度：{{accuracy}}\n经度{{longitude}} , 纬度{{latitude}}  </text>
    </block>
    
  </view>
  
  <button class="page-body-button" size="mini" type="warn" bindtap="myAddReport"> 我发烧了！（上传本机个人记录到云）</button>
  <button class="page-body-button" size="mini" type="primary" bindtap="myScanReport">我安全吗？（扫描身边病毒活动记录）</button>

  <view wx:if="{{myZcount}}" class="myTextDisplay">
    <text>扫描结果：本次扫描发现 {{myZcount}} 条 可疑接触记录\n</text>
    <text>[序号]  UTC时间窗口:  经度,  纬度</text>
  </view>
  <view class="scan_result" wx:for="{{myZscanResult}}" wx:key="index">
      <text class="result_text">[{{index}}]\t  {{item.myTimeSlotUTC*10000}} :\t  {{item.longitude}},{{item.latitude}}</text>
      <button class="button_detail" bindtap='' data-item='{{item}}'>详情</button>
  </view>

  <!---------Map area------->
  <view wx:if="{{myZcount}}" class="page-section-gap">
    <map
      id="myMap"
      style="width: 100%; height: 300px;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      covers="{{myZscanResult}}"
      show-location
    ></map>
  </view>

